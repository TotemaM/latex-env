\setlength{\parindent}{0pt}     % Deletes alineas (= no paragraph indentation)
\lstdefinestyle{custom}{
    frame=single,
    breaklines=true,
    breakatwhitespace=false,
    basicstyle=\ttfamily,
    inputencoding=utf8/latin1,
    keywordstyle=\bfseries\color{violet!70!white},
    commentstyle=\itshape\color{green!50!black},
    basicstyle=\ttfamily\footnotesize,
    numberstyle=\tiny\color{gray},
    breaklines=true,
    captionpos=b,
    keepspaces=true,
    numbers=left,
    numbersep=7pt,
    showspaces=false,
    showstringspaces=false,
    showtabs=false,
    tabsize=2
}

\newcommand{\code}[4]{ % 1: path, 2: firstline, 3: lastline, 4: language
    \lstset{style=custom, language=#4} % Java, Python, C, C++, etc.
    \lstinputlisting[firstline=#2, lastline=#3]{#1}
}
